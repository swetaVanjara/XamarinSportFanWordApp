<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:background="#ffffff"
        android:paddingBottom="10dp">
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout7"
            android:background="#f4f4f4"
            android:visibility="gone">
            <Button
                android:text="Become an Admin of this profile!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnAdmin"
                android:textSize="14dp"
                android:background="@drawable/buttonbackground"
                android:textColor="#212121"
                android:textAllCaps="false"                
                android:visibility="gone" />
        </RelativeLayout>
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_height="1dp"
            android:id="@+id/relativeLayout9"
            android:layout_width="match_parent"
            android:background="#e3e4e6" />
        <ffimageloading.views.ImageViewAsync
            android:src="@drawable/defprofpic"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/imgProfile"
            android:scaleType="fitCenter"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp" />
        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblName"
            android:textColor="#212121"
            android:gravity="center"
            android:layout_marginBottom="5dp" />
        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblSport"
            android:textColor="#990000"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:textSize="11dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            android:gravity="center"
            android:layout_marginBottom="5dp">
            <TextView
                android:text="Ranking"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textColor="#909090" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblRanking"
                android:textColor="#212121"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp" />
            <TextView
                android:text="Record"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textColor="#909090" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblRecord"
                android:textColor="#212121"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout4"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/relativeLayout3"
                android:background="@drawable/FollowRoundedBackground"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true">
                <Button
                    android:text="Follow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnFollow"
                    android:background="@drawable/buttonroundedbackground"
                    android:textSize="13dp"
                    android:textAllCaps="false" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/linearLayout2">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout3"
            android:background="#f4f4f4"
            android:layout_weight="1"
            android:visibility="visible"
            android:gravity="center_vertical">
            <TextView
                android:text="Posts"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:textColor="#909090"
                android:gravity="center" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblPosts"
                android:textColor="#212121"
                android:gravity="center" />
        </LinearLayout>
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout1"
            android:background="#e3e4e6" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout3"
            android:background="#f4f4f4"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:text="Followers"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:textColor="#909090"
                android:gravity="center" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblFollowers"
                android:textColor="#212121"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:text="FEED"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/textView2"
        android:background="#e3e4e6"
        android:textColor="#212121"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textSize="13dp" />
</LinearLayout>